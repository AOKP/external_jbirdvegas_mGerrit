<resources>
    <declare-styleable name="CardUI">
        <attr name="columnCount" format="integer"/>
    </declare-styleable>
    <declare-styleable name="item">
        <attr name="gerritIcon" format="reference"/>
        <attr name="projectsIcon" format="reference"/>
        <attr name="refreshIcon" format="reference"/>
        <attr name="overflowIcon" format="reference"/>
        <attr name="searchIcon" format="reference"/>
    </declare-styleable>
    <declare-styleable name="LinearLayout">
        <attr name="mainBackgroundColor" format="color"/>
        <attr name="cardBackgroundColor" format="color"/>
        <attr name="clickableCardBackground" format="reference" />
        <attr name="backgroundTop" format="reference"/>
    </declare-styleable>
    <declare-styleable name="CommitCard">
        <attr name="isSelected" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="TextView">
        <attr name="cardTextStyle" format="reference"/>
        <attr name="cardTitleStyle" format="reference"/>
        <attr name="warningIcon" format="reference"/>
        <attr name="changeInsertedStyle" format="reference" />
        <attr name="changeDeletedStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="ImageView">
        <attr name="shareIcon" format="reference"/>
        <attr name="viewIcon" format="reference"/>
        <attr name="saveIcon" format="reference"/>
    </declare-styleable>

    <attr name="diffStyle" format="reference" />
    <declare-styleable name="DiffTextView">
        <attr name="added" format="color" />
        <attr name="removed" format="color" />
        <attr name="rangeInfo" format="color" />
        <attr name="origHeader" format="color" />
        <attr name="newHeader" format="color" />
        <attr name="pathInfo" format="color" />
    </declare-styleable>

    <declare-styleable name="ImageButton">
        <attr name="backIcon" format="reference"/>
        <attr name="nextIcon" format="reference"/>
    </declare-styleable>
</resources>
