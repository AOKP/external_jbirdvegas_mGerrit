<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Light" parent="android:style/Theme.Holo.Light">
        <item name="android:textColorPrimary">@color/actionbar_text</item>
        <item name="gerritIcon">@drawable/ic_menu_source</item>
        <item name="projectsIcon">@drawable/ic_menu_project</item>
        <item name="refreshIcon">@drawable/ic_action_refresh</item>
        <item name="overflowIcon">@drawable/ic_action_overflow</item>
        <item name="shareIcon">@drawable/ic_action_share</item>
        <item name="mainBackgroundColor">@color/main_background</item>
        <item name="cardTextStyle">@style/CardText.Light</item>
        <item name="cardTitleStyle">@style/CardTitle.Light</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="clickableCardBackground">@drawable/card_background_states</item>
        <item name="viewIcon">@drawable/ic_menu_view</item>
        <item name="warningIcon">@drawable/ic_action_warning</item>
    </style>

    <style name="Theme.Dark" parent="android:style/Theme.Holo">
        <item name="android:textColorPrimary">@color/actionbar_text_dark</item>
        <item name="gerritIcon">@drawable/ic_menu_source_dark</item>
        <item name="projectsIcon">@drawable/ic_menu_project_dark</item>
        <item name="refreshIcon">@drawable/ic_action_refresh_dark</item>
        <item name="overflowIcon">@drawable/ic_action_overflow_dark</item>
        <item name="shareIcon">@android:drawable/ic_menu_share</item>
        <item name="mainBackgroundColor">@color/main_background_dark</item>
        <item name="cardTextStyle">@style/CardText.Dark</item>
        <item name="cardTitleStyle">@style/CardTitle.Dark</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="clickableCardBackground">@drawable/card_background_states_dark</item>
        <item name="viewIcon">@android:drawable/ic_menu_view</item>
        <item name="warningIcon">@drawable/ic_action_warning_dark</item>
    </style>

    <style name="CardText">
        <item name="android:textSize">@dimen/card_small_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CardText.Light">
        <item name="android:textColor">@color/card_text</item>
    </style>

    <style name="CardText.Dark">
        <item name="android:textColor">@color/card_text_dark</item>
    </style>

    <style name="CardText.Committer">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardText.CommitOwnerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardText.CommitOwnerDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="CardTitle" parent="style/CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_large_text</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="CardTitle.Light" parent="style/CardTitle">
        <item name="android:textColor">@color/card_title_text</item>
    </style>

    <style name="CardTitle.Dark" parent="style/CardTitle">
        <item name="android:textColor">@color/card_light_text</item>
    </style>

    <style name="ActionViewsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

</resources>