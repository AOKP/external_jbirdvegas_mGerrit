<!-- Place application-specific constatnts here -->
<resources>
    <!-- Interval between project list synchronizations (in milliseconds)
        Sync at most once every 24 hours -->
    <integer name="projects_sync_interval">86400000</integer>

    <!-- Interval between change list synchronizations (in milliseconds)
        Sync at most once every 20 minutes -->
    <integer name="changes_sync_interval">1200000</integer>

    <!-- Maximum number of changes to fetch at once.
        Set this to a negative number to not specify a limit -->
    <integer name="changes_limit">100</integer>
</resources>