<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:key="gerrit_instances_key"
        android:title="@string/choose_gerrit_instance"/>

    <ListPreference
        android:key="app_theme"
        android:title="@string/change_theme"
        android:entries="@array/themes_entries"
        android:entryValues="@array/themes_entry_values" />

    <CheckBoxPreference
        android:key="animation_key"
        android:title="@string/google_now_style_animations_title"
        android:summary="@string/google_now_style_animations_summary"/>

    <PreferenceCategory
        android:title="@string/locales">

        <ListPreference
            android:key="server_timezone"
            android:title="@string/server_timezone_title"
            android:summary="@string/server_timezone_summary"/>

        <ListPreference
            android:key="local_timezone"
            android:title="@string/local_timezone_title"
            android:summary="@string/local_timezone_summary"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/open_source_libs">

        <Preference
            android:key="open_source_lib_cards_ui"
            android:title="@string/cards_ui"
            android:summary="@string/cards_ui_website"/>

        <Preference
            android:key="open_source_lib_nine_old_androids"
            android:title="@string/nine_old_androids"
            android:summary="@string/nine_old_androids_website"/>

        <Preference
            android:key="open_source_aosp_volley"
            android:title="@string/aosp_volley_title"
            android:summary="@string/aosp_volley_website"/>

        <Preference
            android:key="open_source_apache_commons"
            android:title="@string/apache_commons_title"
            android:summary="@string/apache_commons_website"/>
    </PreferenceCategory>
</PreferenceScreen>